<h1>book#edit_top</h1> 
  <!-- bookers2_views_books_edit -->

<main>
  <p id="notice"></p>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        
        <%= form_with model: @book do |f| %>
            <!-- Title -->
          <div class="form-group">
            <label for="user_title">
              Title
            </label>
              <%= f.text_field :title, class:"form-control" %>
          </div>
                
            <!-- Opinion -->
          <div class="form-group">
            <label for="user_body">
              Opinion
            </label>
              <%= f.text_area :body, class:"form-control", rows:"3" %>
          </div>
                
            <!-- Update Book -->
          <div class="form-group">
            <%= f.submit 'Update Book', class:"btn btn-lg btn-success btn- mt-4" %>
          </div>
                
            <!-- Show -->
          <td>
            <%= link_to "Show", book_path(@book.id) %>
          </td>
          
          |
          
            <!-- Back -->
          <td>
            <%= link_to "Back", books_path(@book.id) %>
          </td>
                
        <% end %>
        
      </div>
    </div>
  </div>
</main>