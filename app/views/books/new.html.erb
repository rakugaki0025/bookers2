<h1>画像投稿フォーム_new#top</h1>
  <!-- views_books_new -->
  
<%= form_with model: @book_image do |f| %>
    <!-- -->

<h1>User info</h1>


  <h4>Name</h4>
    <%= f.text_field :shop_name %>
      <!-- お店の名前 -->
  
  <h4>image</h4>
    <%= f.file_field :image, accept: "image/*" %>
      <!-- 画像 -->
      
  <h4>introduction</h4>
    <%= f.text_area :caption %>
      <!-- 画像の説明 -->
      
    <%= f.submit 'Update User' %>
<% end %>