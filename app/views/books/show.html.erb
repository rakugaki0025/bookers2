<!-- books_show_bookers2_views_books_show 投稿の詳細-->

<main>
  <p id="notice"></p>
  
  <div class="container px-5 px-sm-0">
    <div class="row">
        <!-- 部分テンプレートrender表記 -->
      <div class="col-md-3">
        <%= render 'users/list', user: @user,book: @book %>
      </div>
        <!-- Book detail -->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
                <!-- User#showへ遷移 -->
              <td>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                  <!-- image_tag Bookscontroller_show_@book.その中にあるuserデータを抜き出す.get_profile_image(100,100) -->
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
                <!-- books#showへ遷移 -->
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
                <!-- body_説明 -->
              <td>
                <%= @book.body %>
              </td>
                <!-- Edit_Link -->
              <td>
                <!--% if @user == current_user %-->
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
                <!--% end %-->
              </td>
                <!-- Destroy_Link-->
              <td>
                <!--% if @user == current_user %-->
                  <%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <!--% end %-->
              </td>
              
            </tr>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</main>

