  <!-- Users_一覧_#index_top_bookers2_views_users_index_完了-->
  <!-- ユーザーの投稿一覧 -->
<html>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <!-- 部分テンプレートrender表記 -->
      <div class="col-md-3">
        <%= render 'users/list', user: @user,book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        
        <table class="table table-hover table-inverse">
            <!-- image_name -->
          <thead>
            <tr>
              <th>image</th>
              <th></th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <!-- User 一覧 -->
          <tbody>
            <% @users.each do |user| %>
                <!-- user_画像_name_link -->
              <tr align="center">
                  <!-- user_画像 -->
                <td>
                  <%= image_tag user.get_profile_image(100,100) %>
                </td>
                  <td></td>
                  <!-- user_name -->
                <td>
                  <%= user.name %>
                </td>
                  <!-- show_link -->
                <td>
                  <%= link_to "show",user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
            
        </table>
        
      </div>
    </div>
  </div>
</html>

