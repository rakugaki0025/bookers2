<h1>Users_edit_編集_#top</h1>
  <!-- bookers2_users_edit -->
  
<main>
  <p id="notice"></p>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        
        <!-- エラーメッセージ user info -->
          
          <% if @user.errors.any? %>
            <h2>
              <%= @user.errors.count %>error prohibited this obj from being saved:
            </h2>
            
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul> 
          <% end %>
          
          
        <%= form_with model: @user do |f| %>
              
                <div class="form-group">
                  <label for="user_name">Name</label>
                   <%= f.text_field :name, class:"form-control" %>
                </div>
                  <!-- name_box -->
                  
                <div class="form-group">
                  <label for="user_image">Image</label>
                    <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
                </div>
                  <!-- Image_box 変更？-->
                  
                <div class="form-group">
                  <label for="user_introduction">Introduction</label>
                    <%= f.text_area :introduction, class:"form-control", rows:"3" %>
                </div>
                  <!-- Introduction_box 変更？ -->
                  
                <div class="form-group">
                    <%= f.submit 'Update User', class:"btn btn-lg btn-secondary btn- mt-4" %>
                </div>
                  <!-- Update_User_チェックボックス -->
        <% end %>
        
      </div>
    </div>
  </div>
</main>

