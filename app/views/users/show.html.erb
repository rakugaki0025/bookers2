<!-- ユーザーの詳細 -->

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        
        <h2>User info</h2>
        
          <%= image_tag @user.get_profile_image(100,100) %>
        
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
            <!-- name introduction -->
            
          <div class="row">
            <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog" aria-hidden="true"></i>
            <% end %>
          </div>
            <!-- User info_遷移先がしっかり更新先になった_チェックボックス -->
          
          <h2 class="mt-3">New book</h2>
          
          <form action="/books" accept-charset="UTF-8" method="post">
            
            <input type="hidden" 
            name="authenticity_token" 
            value="4jAQUfUvsV_bVsVuK6Fi7IX-Gz-F34FO_k7qZk7Ti_-PqeB1SkutfuIkQGILLdUM26I7T7WYzhkSY6yVjQXP0A" 
            autocomplete="off">
            
            <div class="form-group">
              <label for="book_title">Title</label>
              <input class="form-control book_title" type="text" name="book[title]" id="book_title">
            </div>
              <!-- title box -->
              
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
            </div>
              <!-- Opinion box-->
              
            <div class="form-group">
              <input type="submit" 
              name="commit" 
              value="Create Book" 
              class="btn btn-success" 
              data-disable-with="Create Book">
            </div>
              <!-- Create Book box -->
              
          </form>
            <!-- new book_title_opinion_create book -->
            
      </div>
    </div>
  </div>
</main>


