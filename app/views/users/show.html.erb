<h1>Users_show#top一番初めのページ</h1>
  <!-- bookers2_users_show -->


<!-- ユーザーの詳細 -->
    <div>
      <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %>
    </div>

<!-- ユーザーの投稿一覧 -->

  <% @books.each do |book_image| %>
    <div>
  
      <p>投稿ユーザー画像：<%= image_tag book_image.user.get_profile_image(100,100) %></p>
  
      <p>ショップ名：<%= book_image.shop_name %></p>
  
      <p>説明：<%= book_image.caption %></p>
  
      <p>ユーザーネーム：<%= book_image.user.name %></p>
  
    </div>
  <% end %>
  
  
  <h1>New book</h1>
    
  <%= form_with model: @book_image do |f| %>
    <!-- 遷移先未設定 --
    
    <h4>Title</h4>
    <!-- -->
  <%= f.text_field :title %>
  
    <!-- -->
    <h4>Opinion</h4>
    
  <%= f.text_area :body %><br>
    <!-- -->
  <%= f.submit 'Create Book' %>
<% end %>

