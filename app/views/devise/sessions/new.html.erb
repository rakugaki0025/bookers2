<h2>Log in</h2> <!-- views_devise_sessions ディレクトリ -->
  
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
        <div class="form-body p-4">
        
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="input-group mb-3">
            
            <!--div class="input-group-prepend">
              <!-- 人のアイコン --
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
              <!-- name_icon_ヒント -->
              
            <!--%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>-->
              <!-- text_sample_表示_ヒント -->
              
            <div class="field"> 
              <%= f.label :name %><br>
                <!--  -->
              <%= f.text_field :name, autofocus: true %>
                <!-- 編集 -->
      
            </div>
            
          </div>
              <!-- Log_in_name -->
          
          <div class="input-group mb-3">
            <!--div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
              <!-- pass_icon_ヒント -->
              
            <div class="field"> 
              <%= f.label :password %><br>
                <!--  -->
              
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"" %><br>
                <!-- text_sample_表示_ヒント -->
              
              <%= check_box_tag :remember, params[:remember], true %>
              <%= label_tag :remember_me %>
                <!-- Remenber me チェックボックスタグ -->
            
          </div>
            <!-- Log_in_pass -->
            
          <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-5" %>
            <!-- Log_in_ボタン f.submit -->
            
        <% end %>
          <br>
        <%= render "devise/shared/links" %><br>
          <!-- Forgot your password? テキストがdeviseにより？生成された？ -->

        </div>
        </div>
      </div>
    </div>
  </div>
  
  