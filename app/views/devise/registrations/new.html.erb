 <!-- bookers2_views_devise_registrations 新規登録 ディレクトリ -->
  
  <div class="container">
    <div class="row no-gutters">
      <div class="form-body p-1">
        <h2>Sign up</h2>
        
        <%= form_with model: @user, url: user_registration_path do |f| %>
        <!--%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %-->
          <!-- 変更前 -->
          <!-- form_for から form_withへ -->
        <%= render "devise/shared/error_messages", resource: resource %>
            <!-- ユーザ登録用の name -->
          <div class="field">
              <!--  -->
            <%= f.label :name %><br>
              <!-- 編集 -->
            <%= f.text_field :name, autofocus: true %>
          </div>
            <!-- e-mail-->
          <div class="field">
              <!--  -->
            <%= f.label :email %><br />
              <!--  -->
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
            <!-- 新規パスワード -->
          <div class="field">
              <!--  -->
            <%= f.label :password %>
              <!--  -->
            <% if @minimum_password_length %>
              <!--  -->
            <em>(<%= @minimum_password_length %> characters minimum)</em>
              
            <% end %><br />
              <!--  -->
            <%= f.password_field :password, autocomplete: "new-password" %>
              
          </div>
            <!-- 確認用パス -->
          <div class="field">
              <!--  -->
            <%= f.label :password_confirmation %><br />
              <!--  -->
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
            <!-- Sign up ボタン-->
          <div class="col-5">
            <%= f.submit "Sign up", class:"btn btn-sm btn-success" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  
  