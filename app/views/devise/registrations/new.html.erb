<h2>Sign up</h2> <!-- bookers2_views_devise_registrations 新規登録 ディレクトリ -->
  
  <div class="container">
    <div class="row no-gutters">
      <div class="form-body p-1">
        
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <!-- form_for から form_withへ -->
        <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="field"> 
            <%= f.label :name %><br>
              <!--  -->
            <%= f.text_field :name, autofocus: true %>
              <!-- 編集 -->
          </div>
            <!-- ユーザ登録用の name -->
          <div class="field">
            <%= f.label :email %><br />
              <!--  -->
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <!--  -->
          </div>
            <!-- e-mail-->
          <div class="field">
            <%= f.label :password %>
              <!--  -->
            
            <% if @minimum_password_length %>
              <!--  -->
            
            <em>(<%= @minimum_password_length %> characters minimum)</em>
              <!--  -->
            <% end %><br />
              
            <%= f.password_field :password, autocomplete: "new-password" %>
              <!--  -->
          </div>
            <!-- 新規パスワード -->
          <div class="field">
            <%= f.label :password_confirmation %><br />
              <!--  -->
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <!--  -->
          </div>
            <!-- 確認用パス -->
            
          <div class="col-5">
            <%= f.submit "Sign up", class:"btn-block btn-success" %>
          </div>
          
            <!-- Sign up ボタン-->
        
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  
  